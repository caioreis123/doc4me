{
  "name": "Doc4me",
  "displayName": "Doc4me",
  "description": "ai documentation generation tool",
  "icon": "./neonRobot.png",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.81.0"
  },
  "publisher": "caioreis123",
  "repository": {
    "type": "git",
    "url": "git://github.com/caioreis123/doc4me.git"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": [
      {
        "title": "Doc4me",
        "properties": {
          "doc4me.directoriesToIgnore": {
            "type": "array",
            "markdownDescription": "Files inside these directories will not be analyzed."
          },
          "doc4me.supportedCodeExtensions": {
            "type": "array",
            "markdownDescription": "The file extensions supported by Doc4me."
          },
          "doc4me.projectExplanationPrompt": {
            "type": "string",
            "default": "Explain what this code project do, given the following explanations of each file: \n",
            "markdownDescription": "The prompt used to explain the whole project based on the explanation generated of each file."
          },
          "doc4me.fileExplanationPrompt": {
            "type": "string",
            "default": "What this code do?\n",
            "markdownDescription": "The prompt used to explain a code file."
          },
          "doc4me.openAiApiKey": {
            "type": "string",
            "markdownDescription": "The openai key used to generate documentation."
          }
        }
      }
    ],
    "commands": [
      {
        "command": "doc4me.project",
        "title": "Doc 4 me the whole project - doc4me"
      },
      {
        "command": "doc4me.file",
        "title": "Doc 4 me the current file - doc4me"
      },
      {
        "command": "doc4me.directory",
        "title": "Doc 4 me the current directory - doc4me"
      },
      {
        "command": "doc4me.calculate",
        "title": "Calculate tokens per file - doc4me"
      },
      {
        "command": "doc4me.ask",
        "title": "Ask a question to the current file - doc4me"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/sinon": "^10.0.17",
    "@types/vscode": "^1.81.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "jest": "^29.7.0",
    "mocha": "^10.2.0",
    "sinon": "^16.0.0",
    "ts-loader": "^9.4.3",
    "typescript": "^5.1.3",
    "webpack": "^5.85.0",
    "webpack-cli": "^5.1.1"
  },
  "dependencies": {
    "axios": "^1.5.1",
    "langchain": "^0.0.163"
  }
}
